scroll-view {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: url("https://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/szq/danci/images/map-africa/ouzhou.png");
  background-size: cover;
}

.bg-img {
  position: absolute;
  width: 750rpx;
  left: 0;
  top: 180rpx;
}
.init{
  transform: rotateY(180deg);
}
.aircraft {
  position: absolute;
  width: 112rpx;
  left: 180rpx;
  top: 140rpx;
}
.ul .li text{
  display: inline-block;
  width: 350rpx;
  font-size: 24rpx;
  color: #fff;
  padding-left: 10rpx;
}
.ul .li {
  height: 40rpx;
  position: absolute;
  display: flex;
  align-items: center;
}

.ul .li .icon {
  width: 40rpx;
  /* height: 35rpx; */
  padding-right: 10rpx;
  animation: floats 1.6s ease-in-out 2.9s infinite alternate;
}
@keyframes floats{
  0%   {transform:translate(0,-2px)}
  100% {transform:translate(0,6rpx)}
}
