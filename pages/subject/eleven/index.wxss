.tips{
  width: 575rpx;
  margin: 20rpx auto;
  text-align: right;
}
.tips image{
  width: 150rpx;
  animation: floats 1.3s ease-in-out 2.7s infinite alternate;
}
@keyframes floats{
  0%   {transform:translate(0,0px)}
  100% {transform:translate(0,10rpx)}
}
.tran{
  transform: scale(1.2);
}
.font{
  font-weight: bold;
  color: #9B88E2 !important;
}
.zhe{
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.8;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.popup{
  width: 658rpx;
  height: 620rpx;
  background-image: url(https://game.flyh5.cn/resources/game/wechat/szq/danci/images/subject/one/member.png);
  background-size: cover;
  position: fixed;
  top: 45%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 15;
}
.popup .img1{
  width: 430rpx;
  position: absolute;
  bottom: 130rpx;
  left: 50%;
  transform: translateX(-50%);
}
.popup .img2{
  width: 430rpx;
  position: absolute;
  bottom: 35rpx;
  left: 50%;
  transform: translateX(-50%);
}
.bor{
  border: 5px solid #9B88E2;
  box-sizing: border-box;
}