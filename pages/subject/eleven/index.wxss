.flex{
  width: calc(100% - 170rpx);
  justify-content: center;
}
.contents{
  height: 80rpx;
  background-color: white;
  padding: 0 30rpx;
  border-radius: 40rpx;
  text-align: center;
  color: #ff7408;
  font-size: 48rpx;
  letter-spacing: 2rpx;
  display: flex;
  align-items: center;
}
.icon-one image, .icon-two image, .icon-three image{
    display: block;
    width: 60%;
    max-height: 80%;
