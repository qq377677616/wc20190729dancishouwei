/* pages/subject/eleven/index.wxss */
.eleven-bg{
    background-size: 100% 100%;
    height: 100vh;
}
.topic-box{
    width: calc(100% - 80rpx);
    height: 625rpx;
    background-color: white;
    border-radius: 20rpx;
    overflow: hidden;
    margin: 0 auto;
    box-sizing: border-box;
    box-shadow: 0 0 3px 3px rgba(0, 0, 0, .1);
    padding: 20rpx;
}
.topic-box >view{
    width: 100%;
    height: 100%;
    background-color: rgb(255, 209, 85);
    border-radius: 20rpx;
    position: relative;
}
.topic-box >view >view > view{
    width: 90%;
    height: 170rpx;
    display: flex;
    margin: 0 auto;
    flex-direction: row;
    align-items: center;
    /* justify-content: space-between; */
}
.center{
  margin: 10rpx auto !important;
}
.topic-box >view >view{
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}
.topic-box >view :nth-child(3){
 margin-top: -20rpx;
}
.yes{
  background: #d1ff74 !important;
  color: #fff !important;
}
.no{
  background: #ed3c3e !important;
  color: #fff !important;
}
