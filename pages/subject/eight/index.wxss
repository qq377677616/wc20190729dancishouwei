.eight-bg{
    background-size: 100% 100%;
    height: 100vh;
}
.topic-box{
    width: calc(100% - 80rpx);
    height: 560rpx;
    background-color: white;
    border-radius: 20rpx;
    overflow: hidden;
    margin: 0 auto;
    box-sizing: border-box;
    box-shadow: 0 0 3px 3px rgba(0, 0, 0, .1)
}
.topic-box .topic-box-top{
    display: flex;
}
.topic-box .topic-box-top view{
    margin:0 20rpx 20rpx 20rpx;
    border-radius: 20rpx;
    /* padding: calc(100%/3 - 40rpx) 0 0; */
    width: calc(100%/2 - 40rpx);
    height: 170rpx;
    line-height: 170rpx;
    text-align: center;
    color: #fff;
    font-size: 65rpx;
    background-color: rgb(255, 209, 85);
    /* background-repeat: no-repeat;
