.topic-box .topic-box-bottom{
    border-radius: 20rpx;
    margin: 20rpx;
    height: calc(60% - 5rpx);
    width: calc(100% - 40rpx);
    background-color: rgb(255, 209, 85);
}
.topic-box .topic-box-bottom > image{
    display: block;
    width: 150rpx;
    max-height: 160rpx;
    padding-top: 30rpx;
    padding-bottom: 20rpx;
    margin: 0 auto;
}
.topic-box .topic-box-bottom > view{
    text-align: center;
    font-size: 80rpx;
    color: #f73c44;
}
.tips{
  width: 575rpx;
  margin: 20rpx auto;
  text-align: right;
}
.tips image{
  width: 150rpx;
  animation: floats 1.3s ease-in-out 2.7s infinite alternate;
}
@keyframes floats{
  0%   {transform:translate(0,0px)}
  100% {transform:translate(0,10rpx)}
}
.font{
  font-size: 85rpx !important;
}
.yes{
  background: green !important;
}
.no{
  background: red !important;
}