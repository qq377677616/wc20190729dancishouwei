/* pages/subject/four/index.wxss */
.four-bg{
    background-size: 100% 100%;
    height: 100vh;
}
.topic-box{
    width: calc(100% - 80rpx);
    background-color: white;
    border-radius: 20rpx;
    overflow: hidden;
    margin: 0 auto;
    box-sizing: border-box;
    box-shadow: 0 0 3px 3px rgba(0, 0, 0, .1);
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx;
}
.topic-box >view{
    height: 420rpx;
    background-color: rgb(255, 209, 85);
    border-radius: 20rpx;
    width: 100%;
    display: flex;
    align-items: center;
}
.topic-box >view :nth-child(1),.topic-box >view :nth-child(3) {
    width: 100%;
}
.topic-box >view :nth-child(1) image,.topic-box >view :nth-child(3) image{
    flex-shrink: 0;
    display: block;
    max-width: 200rpx !important;
    max-height: 330rpx !important;
    margin: 0 auto;
}
.topic-box >view :nth-child(2) image{
    display: block;
    width: 80rpx;
    height: 60rpx;
    margin: 0 auto;
}
.tips{
  width: 575rpx;
  margin: 20rpx auto;
  text-align: right;
}
.tips image{
  width: 150rpx;
  animation: floats 1.3s ease-in-out 2.7s infinite alternate;
}
@keyframes floats{
  0%   {transform:translate(0,0px)}
  100% {transform:translate(0,10rpx)}
}
.tran{
  transform: scale(1.3);
}
audio{
  width: 50rpx;
  display: none;
}


