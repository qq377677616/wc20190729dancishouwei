/* pages/subject/seven/index.wxss */

.seven-bg{
    background-size: 100% 100%;
    height: 100vh;
}
.topic-box{
    width: calc(100% - 120rpx);
    height: 790rpx;
    background-color: white;
    border-radius: 20rpx;
    overflow: hidden;
    margin: 0 auto;
    box-sizing: border-box;
    box-shadow: 0 0 3px 3px rgba(0, 0, 0, .1)
}
.topic-box .topic-box-top{
    margin: 20rpx;
    border-radius: 20rpx;
    height: calc(25% - 40rpx);
    width: calc(100% - 40rpx);
    background-color: rgb(255, 209, 85);
    color: #ff7408;
    padding: 20rpx;
    box-sizing: border-box;
}
.topic-box .topic-box-top{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 34rpx;
    font-weight: bold;
}
.font28{
  font-size: 28rpx;
  width: 100%;
  overflow: hidden;
}
.topic-box .topic-box-bottom{
    border-radius: 20rpx;
    margin: 20rpx;
    height: calc(75% - 20rpx);
    width: calc(100% - 40rpx);
    background-color: rgb(255, 209, 85);
}

.topic-box .topic-box-bottom .air{
    padding: 30rpx 0;
    padding-top: 10rpx;
    flex: 1;
    text-align: center;
    display: flex;
    justify-content: center;
}
.topic-box .topic-box-bottom .air view{
    color: #ff7408;
    font-size: 40rpx;
    text-align: center;
    margin: 0 5rpx;
    border-bottom:5rpx #ff7408 solid;
    width: 50rpx;
    height: 50rpx;
    line-height: 35rpx;
    box-sizing: border-box;
}

.topic-box .topic-box-bottom > .select-btn{
    width: 95%;
    display: flex;
    margin: 0 auto;
    flex-wrap: wrap;
}
.topic-box .topic-box-bottom > .select-btn > view{
    width: calc(100% / 6);
    padding: calc(100% / 6) 0 0;
    position: relative;
}
.topic-box .topic-box-bottom > .select-btn > view >view {
    position: absolute;
    border:1px #ffd149 solid;
    background-color: white;
    border-radius: 10rpx;
    top: 2.5rpx;
    right: 2.5rpx;
    left: 2.5rpx;
    bottom: 2.5rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ff7408;
}
.delete{
    flex: 1;
    /*width: 100%;*/
}
.tips{
  width: 575rpx;
  margin: 20rpx auto;
  text-align: right;
}
.tips image{
  width: 150rpx;
  animation: floats 1.3s ease-in-out 2.7s infinite alternate;
}
@keyframes floats{
  0%   {transform:translate(0,0px)}
  100% {transform:translate(0,10rpx)}
}
.tran{
  transform: scale(1.3);
}
.font{
  font-size: 85rpx !important;
}
.isTip{
  font-weight: bold !important;
  font-size: 55rpx;
}
.yes{
  background: #d1ff74 !important;
}
.no{
  background: #ed3c3e !important;
  color: #fff !important;
}