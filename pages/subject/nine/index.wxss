/* pages/subject/nine/index.wxss */
page{
  height: 100%;
}
.nine-bg{
    background-size: 100% 100%;
    height: 100%;
}
.topic-box{
    width: calc(100% - 100rpx);
    /*height: 560rpx;*/
    background-color: white;
    border-radius: 20rpx;
    overflow: hidden;
    margin: 0 auto;
    padding: 10rpx;
    box-sizing: border-box;
    box-shadow: 0 0 3px 3px rgba(0, 0, 0, .1)
}
.topic-box .topic-box-bottom{
    display: flex;
    flex-wrap: wrap;
}
.topic-box-top{
    margin: 10rpx;
    border-radius: 20rpx;
    line-height: 65rpx;
    height: 85rpx;
    width: calc(100% - 20rpx);
    background-color: rgb(255, 209, 85)
}
.topic-box-tops{
  margin: 10rpx;
  border-radius: 20rpx;
  height: 85rpx;
  line-height: 85rpx;
  width: calc(100% - 20rpx);
  /* background-color: #feab97; */
  background: linear-gradient(to bottom, #fead99 0%,#fe9379 100%);
  color: #fff;
  text-align: center;
  font-family: 'Myriad Pro';
  font-weight: 600;
  font-size: 40rpx;
}
.topic-box .topic-box-top .air{
    flex: 1;
    text-align: center;
    height: 100%;
    display: flex;
    justify-content: center;
}
.topic-box .topic-box-top .air view{
    color: #f73c44;
    font-size: 40rpx;
    text-align: center;
    margin: 0 5rpx;
    border-bottom:5rpx #f73c44 solid;
    width: 50rpx;
    height: 70rpx;
    line-height: 70rpx;
    padding-top: 10rpx;
    box-sizing: border-box;
}
.topic-box .topic-box-bottom view{
    border-radius: 20rpx;
    margin: 10rpx;
    width: calc(100% / 5 - 20rpx);
    padding: calc(100% / 5 - 20rpx) 0 0 ;
    background-color: rgb(255, 209, 85);
    position: relative;
}
.topic-box .topic-box-bottom view text{
    position: absolute;
    font-size: 40rpx;
    top: 50%;
    left: 0;
    right: 0;
    color: #f73c44;
    transform: translateY(-50%);
    text-align: center;
}
.tips{
  width: 575rpx;
  margin: 0 auto;
  text-align: right;
}
.tips image{
  width: 150rpx;
  animation: floats 1.3s ease-in-out 2.7s infinite alternate;
}
@keyframes floats{
  0%   {transform:translate(0,0px)}
  100% {transform:translate(0,10rpx)}
}
.tran{
  transform: scale(1.3);
}
.font{
  font-size: 60rpx !important;
  font-weight: bold;
}
.yes{
  background: green !important;
}
.no{
  background: red !important;
}
.no text{
  color: #fff !important;
}
.display{
  /* display: none; */
  visibility: hidden;
}
