.isTip{
  font-size: 50rpx;
  font-weight: bold;
}
.font{
  font-size: 85rpx !important;
}
.yes{
  background: #d1ff74 !important;
}
.no{
  background: #ed3c3e !important;
  color: #fff !important;
}
.boxs{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.9);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: myfirst1 .4s;
	animation-fill-mode: forwards;
}
.boxs image{
  max-width: 90% !important;
  max-height: 90% !important;
}
@keyframes myfirst1{
  from {transform: scale(0);}
  to {transform: scale(1);}
}