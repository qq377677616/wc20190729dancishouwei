<view class="index">
    <!--  标题三个图片  -->
    <view class="title">
        <image src="{{resourcesUrl}}page1_3.png" bindtap="handJumps" data-url="/pages/Achievements/index"/>
        <image wx:for="{{titles}}"
               wx:key="{{item}}"
               src="{{resourcesUrl}}{{item}}.png"/> 
    </view>
    <!--  三个按钮  -->
    <view>
        <image class="btn"
               wx:for="{{buttons}}"
               wx:key="{{index}}"
               src="{{resourcesUrl}}{{item.icon}}.png"
               mode="widthFix"
               data-url="{{item.url}}" 
               data-id="{{index+1}}"
               bindtap="handJumps"/>
    </view>
</view>
