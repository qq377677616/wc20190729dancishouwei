/* components/prompt/index.wxss */
.zhe{
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.8;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}
.popup{
  width: 100%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 10;
}
.popup .p1{
  width: 540rpx;
  margin: auto;
}
.popup .p1 image{
  width: 100%;
}
.popup .p2{
  width: 420rpx;
  margin: auto;
  margin-top: 40rpx;
  display: flex;
}
.popup .p2 .d1{
  flex: 1;
  text-align: center;
}
.popup .p2 .d1 image{
  width: 126rpx;
}
.popup .p2 .d2{
  flex: 1;
  text-align: center;
}
.popup .p2 .d2 image{
  width: 126rpx;
}